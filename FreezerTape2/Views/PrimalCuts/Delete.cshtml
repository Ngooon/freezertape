@model FreezerTape2.Models.PrimalCut

@{
    ViewData["Title"] = "Delete";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>

<h4>Delete</h4>
<p>Are you sure you want to delete this?</p>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dd class="col-sm-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Packages.First().Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Packages.First().Weight)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Packages.First().PackingDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Packages.First().Carcass.Specie)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Packages.First().StoragePlace)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Package package in Model.Packages)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Packages" asp-action="Details" asp-route-id="@package.Id">@Html.DisplayFor(modelItem => package.Id)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => package.Weight)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => package.PackingDate, "ShortDate")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => package.Carcass.Specie.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => package.StoragePlace.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
        <dd class="col-sm-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Species.First().Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Species.First().Name)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Specie specie in Model.Species)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => specie.Id)
                            </td>
                            <td>
                                <a asp-controller="Species" asp-action="Details" asp-route-id="@specie.Id">@Html.DisplayFor(modelItem => specie.Name)</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
