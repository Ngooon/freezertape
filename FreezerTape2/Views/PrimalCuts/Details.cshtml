@model FreezerTape2.Models.PrimalCut

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PrimalCut</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if (Model.Species != null && Model.Species.Any())
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Species)
            </dt>
            <dd class = "col-sm-10">
                <ul>
                    @foreach (Specie specie in Model.Species)
                    {
                        <li>@Html.DisplayFor(model => specie.Name)</li>
                    }
                </ul>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
