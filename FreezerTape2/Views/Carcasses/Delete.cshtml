@model FreezerTape2.Models.Carcass

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Carcass</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specie.IdentifyingName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShotDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShotDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShotPlace)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShotPlace)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShotBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShotBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LiveWeight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LiveWeight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DressedWeight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DressedWeight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PositionOfBulkhead)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PositionOfBulkhead)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-12">
            @Html.DisplayNameFor(model => model.Packages):
        </dt>
        <dd class="col-sm-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Packages.First().Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Packages.First().Weight)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Packages.First().PackingDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Packages.First().ExpiryDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Packages.First().PrimalCut)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Packages.First().StoragePlace)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Package package in Model.Packages)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Packages" asp-action="Details" asp-route-id="@package.Id">@Html.DisplayFor(modelItem => package.Id)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => package.Weight)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => package.PackingDate, "ShortDate")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => package.ExpiryDate, "ShortDate")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => package.PrimalCut.ShortName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => package.StoragePlace.ShortName)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
