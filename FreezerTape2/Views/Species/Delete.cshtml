@model FreezerTape2.Models.Specie

@{
    ViewData["Title"] = @Model.Name.ToString() + " - Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Specie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShelfLife)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShelfLife)
        </dd>
        <dd class="col-sm-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PrimalCuts.First().Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrimalCuts.First().Name)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PrimalCut primalCut in Model.PrimalCuts)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Packages" asp-action="Details" asp-route-id="@primalCut.Id">@Html.DisplayFor(modelItem => primalCut.Id)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => primalCut.IdentifyingName)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
        <dd class="col-sm-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PrimalCuts.First().Packages.First().Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrimalCuts.First().Packages.First().Weight)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrimalCuts.First().Packages.First().PackingDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrimalCuts.First().Packages.First().ExpiryDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrimalCuts.First().Packages.First().PrimalCut)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrimalCuts.First().Packages.First().StoragePlace)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PrimalCut primalCut in Model.PrimalCuts)
                    {
                        @foreach (Package package in primalCut.Packages)

                        {
                            <tr>
                                <td>
                                    <a asp-controller="Packages" asp-action="Details" asp-route-id="@package.Id">@Html.DisplayFor(modelItem => package.Id)</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => package.Weight)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => package.PackingDate, "ShortDate")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => package.ExpiryDate, "ShortDate")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => package.PrimalCut.IdentifyingName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => package.StoragePlace.IdentifyingName)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
